@model IEnumerable<DMS_WEB.Models.SET_CLIENT_DEPARTMENTS>

@{
    ViewBag.Title = "Client Department";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<div class="div_row">
    <div class="div_cell div_caption">Select</div>
    <div class="div_cell div_caption">Client</div>
    <div class="div_cell div_caption">Department</div>
    <div class="div_cell div_caption">Email</div>
    <div class="div_cell div_caption">Delete</div>
</div>
@foreach (var item in Model) {
    <div class="div_row">
        <div class="div_cell">@Html.ActionLink("Edit", "Edit", new { id = item.DEPT_NO}, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id = item.CLIENT_NO }, new { @class = "btn btn-primary" }) </div>
        <div class="div_cell">@Html.DisplayFor(modelItem => item.SET_CLIENTS.CLIENT_NAME)</div>
        <div class="div_cell">@Html.DisplayFor(modelItem => item.DEPT_NAME)</div>
        <div class="div_cell">@Html.DisplayFor(modelItem => item.DEPT_EMAIL)</div>
        <div class="div_cell">@Html.ActionLink("Delete", "Delete", new { id = item.DEPT_NO }, new {@class="confirm btn btn-warning" })</div>
    </div>
}

@section Scripts {
    
    <script type="text/javascript">
        $(document).ready(function () {

        });

        $(document).on("click", '.confirm', confirm_Click);

        function confirm_Click() {
            if (confirm('Do you want to continue?')) {
                return true;
            } else {
                return false;
            }
        }
    </script>
}